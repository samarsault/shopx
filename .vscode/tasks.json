{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "css",
            "type": "shell",
            "command": "make css"
        },
        {
            "taskName": "cpp",
            "type": "shell",
            "command": "g++ -g -std=c++11 ${relativeFile} -o ${fileDirname}/${fileBasenameNoExtension}  -lcgicc",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }, 
    ]
}